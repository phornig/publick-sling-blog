<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="column-small">#</th>
                <th>Blog</th>
                <th class="column-small">Edit</th>
                <th class="column-small">Delete</th>
            </tr>
            </thead>
            <tbody>
            {{#each blogs}}
                <tr>
                    <td>{{@index}}</td>
                    <td><a href="{{path}}" target="_blank">{{name}}</a></td>
                    <td><a href="{{editPath}}"><i class="glyphicon glyphicon-pencil"></i></a></td>
                    <td><i class="glyphicon glyphicon-trash{{#unless authorable}} disabled{{/unless}}"></i></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
