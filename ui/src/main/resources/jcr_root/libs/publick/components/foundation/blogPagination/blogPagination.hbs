{{#if visible ~}}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav>
                    <ul class="pagination">
                        {{#if firstPage}}
                            <li class="disabled">
                                <span aria-label="Previous">
                                  <span aria-hidden="true">&laquo;</span>
                                </span>
                            </li>
                        {{else}}
                            <li>
                                <a href="{{previousPath}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        {{/if}}
                        {{#each pages}}
                            {{#if current}}
                                <li class="active">
                                    <span>{{@index}}<span class="sr-only">(current)</span></span>
                                </li>
                            {{else}}
                                <li>
                                    <a href="{{path}}">{{@index}}</a>
                                </li>
                            {{/if}}
                        {{/each}}
                        {{#if lastPage}}
                            <li class="disabled">
                                <span aria-label="Next">
                                  <span aria-hidden="true">&raquo;</span>
                                </span>
                            </li>
                        {{else}}
                            <li>
                                <a href="{{nextPath}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{{/if}}
